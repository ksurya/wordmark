{
    "manifest_version": 2,
    "name": "Wordmark",
    "version": "0.1",

    "description": "For a better vocabulary",

    "browser_action": {
        "default_title": "Wordmark",
        "default_popup": "browser_action.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "run_at": "document_end",
            "js": [
                "script.js"
            ]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "storage",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "settings/*",
        "flashcard/*",
        "home/*",
        "list/*",
        "assets/*"
    ]

}

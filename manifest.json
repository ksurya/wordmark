{
    "manifest_version": 2,
    "name": "Wordmark",
    "version": "0.1",

    "description": "For better vocabulary",

    "browser_action": {
        "default_title": "Wordmark",
        "default_popup": "browser_action.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "run_at": "document_end",
            "js": [
                "assets/jquery.min.js",
                "assets/bootstrap.min.js",
                "marker/script.js",
                "popup/script.js"
            ],
            "css": ["popup/popover.min.css"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "storage",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "assets/*",
        "home/*",
        "list/*",
        "settings/*",
        "flashcard/*",
        "marker/*",
        "popup/*"
    ]

}
